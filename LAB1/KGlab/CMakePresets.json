{
    "version": 8,
    "configurePresets": [
        {
            "name": "Clang",
            "displayName": "Clang 18.1.3 x86_64-pc-linux-gnu",
            "description": "Использование компиляторов: C = /usr/bin/clang, CXX = /usr/bin/clang++",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
                "CMAKE_C_COMPILER": "/usr/bin/clang",
                "CMAKE_CXX_COMPILER": "/usr/bin/clang++",
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "MinGW GCC",
            "displayName": "GCC 13-win32 x86_64-w64-mingw32",
            "description": "Использование компиляторов: C = /usr/bin/x86_64-w64-mingw32-gcc, CXX = /usr/bin/x86_64-w64-mingw32-g++",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
                "CMAKE_C_COMPILER": "/usr/bin/x86_64-w64-mingw32-gcc",
                "CMAKE_CXX_COMPILER": "/usr/bin/x86_64-w64-mingw32-g++",
                "CMAKE_BUILD_TYPE": "Debug"
            }
        }
    ]
}